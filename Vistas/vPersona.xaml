<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ACollahuazoS5.Vistas.vPersona"
             Title="vPersona">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Entry x:Name="txtPersona" Placeholder="Nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Edad" Keyboard="Numeric"/>

        <Label x:Name="lblMensaje" TextColor="Yellow"/>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Agregar" Clicked="BtnAgregar_Clicked"/>
            <Button Text="Listar" Clicked="btnListar_Clicked"/>
        </HorizontalStackLayout>

        <!-- Tabla encabezado-->
        <Grid BackgroundColor="White" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Label Text="ID" Grid.Column="0" TextColor="Black"/>
            <Label Text="Nombre" Grid.Column="1" TextColor="Black"/>
            <Label Text="Apellido" Grid.Column="2" TextColor="Black"/>
            <Label Text="Edad" Grid.Column="3" TextColor="Black"/>
            <Label Text="Actualizar" Grid.Column="4" TextColor="Black"/>
            <Label Text="Eliminar" Grid.Column="5" TextColor="Black"/>
        </Grid>

        <!-- Listar Tabla DiseÃ±o-->
        <CollectionView x:Name="listaPersona">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding Id}" Grid.Column="0" TextColor="White"/>
                        <Label Text="{Binding Nombre}" Grid.Column="1"/>
                        <Label Text="{Binding Apellido}" Grid.Column="2"/>
                        <Label Text="{Binding Edad}" Grid.Column="3"/>

                        <Button Text="Editar"
                                Grid.Column="4"
                                Clicked="Button_Clicked"
                                CommandParameter="{Binding}" />

                        <Button Text="Eliminar"
                                Grid.Column="5"
                                BackgroundColor="Red"
                                TextColor="White"
                                Clicked="Button_Clicked_1"
                                CommandParameter="{Binding}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>